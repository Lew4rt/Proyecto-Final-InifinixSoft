<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.PrácticaN2AdrianAcuña.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/beige</item>
        <item name="colorPrimaryDark">@color/beige</item>
        <item name="colorOnPrimary">@color/soft_red</item>
        <item name="colorSecondary">@color/soft_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textViewStyle">@style/PracticaN2_TextView</item>
        <item name="buttonStyle">@style/PracticaN2_Button</item>
        <item name="editTextStyle">@style/PracticaN2_EditText</item>
        <item name="spinnerStyle">@style/PracticaN2_Spinner</item>
        <item name="spinnerDropDownItemStyle">@style/PracicaN2_Spinner_ItemStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/beige</item>
    </style>

    <style name="Theme.PrácticaN2AdrianAcuña" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/yellow_eda</item>
        <item name="colorSecondary">@color/yellow_eda</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textViewStyle">@style/PracticaN2_TextView</item>
        <item name="buttonStyle">@style/PracticaN2_Button</item>
        <item name="editTextStyle">@style/PracticaN2_EditText</item>
        <item name="spinnerStyle">@style/PracticaN2_Spinner</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/NewActionBar</item>
        <item name="android:navigationBarColor">@color/beige</item>
        <item name="android:colorControlNormal">#E84C4F</item>
        <item name="colorControlNormal">#E84C4F</item>
    </style>

    <style name="NewActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="TitleBarTextColor" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">#3E4462</item>
        <item name="android:textColorSecondary">#E84C4F</item>
    </style>



    <style name="Theme.PrácticaN2AdrianAcuña.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>